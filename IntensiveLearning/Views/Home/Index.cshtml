
@{
    ViewBag.Title = "تسجيل دخول";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<div class="Login-Background" style="background-image:url('../../Content/Images/SigninBackground.jpg')">
    <div class="Login-BackgroundShadow">
        <div class="Login-Card">
            @using (Html.BeginForm())
            {
                <div>
                    <label style="margin:0 0 0.5em 0;font-size:1.5em " for="Username">اسم المستخدم</label>
                    <input type="text" id="Username" name="Username" style="text-align:left;" />
                    <label style="font-size:1.5em" for="Password">كلمة المرور</label>
                    <input type="password" id="Password" name="Password"  />
                    <input type="submit" name="Submit" value="تسجيل الدخول" style="margin-top:30px;" />
                </div>

            }
        </div>
    </div>
</div>
