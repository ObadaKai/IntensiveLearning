
@{
    ViewBag.Title = "تسجيل دخول";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<div class="Login-Background">
    <div class="Login-BackgroundShadow">
        <div class="Login-Card">
            @using (Html.BeginForm())
            {
                <div>
                    <h4 style="margin:0 0 0.5em 0 ">اسم المستخدم</h4>
                    <input type="text" name="Username" style="text-align:left;" />
                    <h4 style="margin:0.5em 0;">كلمة المرور</h4>
                    <input type="password" name="Password"  />
                    <input type="submit" name="Submit" value="تسجيل الدخول" style="margin-top:30px;" />
                </div>

            }
        </div>
    </div>
</div>
