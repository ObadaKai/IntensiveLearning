                </p>
            }
            @if (Model.Time != null)
            {
                <h4>
                    @Html.DisplayNameFor(model => model.Time)
                </h4>

                <p>
                    @Html.DisplayFor(model => model.Time)
                </p>
            }

            @if (Model.PaymentApprovalDate != null)
            {
                <h4>
                    @Html.DisplayNameFor(model => model.PaymentApprovalDate)
                </h4>

                <p>
