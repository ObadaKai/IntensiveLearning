                </h4>

                <p>
                    @Html.DisplayFor(model => model.BuyingApprovalDate)
                </p>
            }
            @if (Model.ProofAcceptanceDate != null)
            {
                <h4>
                    @Html.DisplayNameFor(model => model.ProofAcceptanceDate)
                </h4>

                <p>
