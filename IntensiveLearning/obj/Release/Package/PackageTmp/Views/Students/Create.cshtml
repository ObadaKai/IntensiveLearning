@model IntensiveLearning.Database.Student

@{
    ViewBag.Title = "انشاء";
}



    <div ng-controller="AddStudentCtrl" ng-show="ShowForm" class="ng-cloak">
        <h2>انشاء</h2>
        <form name="StCrForm" ng-submit="StudentCreate()" novalidate autocomplete="off">
            @Html.AntiForgeryToken()

            <div class="">
                <h4>طالب</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.BDate, htmlAttributes: new { @class = "control-label " })
                    <input type="date" class="form-control" name="BDate" id="BDate" ng-model="BDate" required />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                    <input type="text" class="form-control" name="Name" id="Name" ng-model="Name" required />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label " })
                    <input type="text" class="form-control" name="Surname" id="Surname" ng-model="Surname" required />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FathersName, htmlAttributes: new { @class = "control-label " })
                    <input type="text" class="form-control" name="FathersName" id="FathersName" ng-model="FathersName" required />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Certificate, htmlAttributes: new { @class = "control-label " })
                    @Html.DropDownList("Certificate", null, htmlAttributes: new { @class = "form-control", ng_model = "Certificate" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Mark, htmlAttributes: new { @class = "control-label " })
                    <input type="number" class="form-control" name="Mark" id="Mark" ng-model="Mark" required />
                </div>

                @*<div class="form-group">
                    @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label " })


                    <select name="State" id="State" class="form-control" ng-model="State">
                        <option selected>متوفر</option>
                        <option>خارج الخدمة</option>
                    </select>
                </div>*@

                <div class="form-group">
                    @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label " })


                    <select name="Sex" id="Sex" class="form-control" ng-model="Sex">
                        <option>ذكر</option>
                        <option>انثى</option>
                    </select>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Centerid, "المركز", htmlAttributes: new { @class = "control-label " })


                    @*<select class="form-control" id="Centerid" name="Centerid" >
                            <option ng-repeat="One in Centers">{{One.Center}}</option>
                        </select>*@
                    @Html.DropDownList("Centerid", null, htmlAttributes: new { @class = "form-control", ng_model = "Centerid" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Stageid, "المرحلة", htmlAttributes: new { @class = "control-label " })
                    @*<select class="form-control" id="Stageid" name="Stageid" >
                            <option ng-repeat="One in Stages">{{One.Stage}}</option>

                        </select>*@

                    @Html.DropDownList("Stageid", null, htmlAttributes: new { @class = "form-control", ng_model = "Stageid" })
                    @Html.ValidationMessageFor(model => model.Stageid, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Regimentid, "الفوج", htmlAttributes: new { @class = "control-label " })
                    @*<select class="form-control" id="Regimentid" name="Regimentid" >
                            <option ng-repeat="One in Regiments">{{One.Regiment}}</option>
                        </select>*@
                    @Html.DropDownList("Regimentid", null, htmlAttributes: new { @class = "form-control", ng_model = "Regimentid" })
                    @Html.ValidationMessageFor(model => model.Regimentid, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SDate, htmlAttributes: new { @class = "control-label " })
                    <input type="date" class="form-control" name="SDate" id="SDate" ng-model="SDate" required />
                </div>

                <input id="imgInp" type="file" aria-label="Add photos to your post" class="upload"style="color:white;"  multiple name="file" onchange="angular.element(this).scope().LoadFileData(this.files)" accept="image/*,application/vnd.ms-excel,application/zip,application/pdf,application/msword">


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" ng-disabled="!StCrForm.$valid" />
                    </div>
                </div>


                @*form is : {{StCrForm.$valid}}*@
            </div>
        </form>
        <div class="col-md-2">

        </div>
        <div class="col-md-10">
            <div ng-show="Warning" class="ng-cloak">
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    ! يرجى التأكد من صحة المعلومات ومن ارفاق الاثبات
                </div>
            </div>

            <div ng-show="Success" class="ng-cloak">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    تمت اضافة الطالب
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("العودة إلى اللائحة", "Index")
        </div>
    </div>
