@model IEnumerable<IntensiveLearning.Database.Examination>

@{
    ViewBag.Title = "لائحة الامتحانات";
}
<div ng-controller="SearchCtrl">
    <h2>لائحة الامتحانات</h2>
    @if (Session["AddExam"] != null)
    {
        if ((bool)Session["AddExam"] == true)
        {
            using (Html.BeginForm("Create", "Examinations", FormMethod.Get))
            {
                <button type="submit" class="btn btn-warning">انشاء جديد</button>
            }
        }
    }
    <div class="col-md-12" style="margin-bottom:20px;padding:0;border:0">
        <div class="col-md-2" style="margin:0;padding:0;border:0">
            <input type="number" class="form-control HigherThanNumber " style="display:inline-block !important;" name="searchdate" id="searchdate" placeholder="...العلامة أعلى من" ng-change="ExamSearchBox()" ng-model="ExamSearchBoxNumber" />
        </div>
        <div class="col-md-8" style="margin:0;padding:0;border:0">
            <input type="text" class="form-control " style="display:inline-block !important;text-align:right" name="search" id="search" placeholder="...البحث" ng-change="ExamSearchBox()" ng-model="ExamSearchBoxData" />
        </div>
        <div class="col-md-2" style="margin:0;padding:0;border:0">
            <input type="date" class="form-control " style="display:inline-block !important;" name="searchdate" id="searchdate" ng-change="ExamSearchBox()" ng-model="ExamSearchBoxDate" />
        </div>
    </div>
    <div id="table_wrapper">

        <table class="table table-striped" ng-hide="ExamRazorForm">
            <thead>
                <tr class="bg-primary">
                    <th></th>
                    <th>الاثبات</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamType.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Study_subject.Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Stage.StageName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>





                    <th>
                        @Html.DisplayNameFor(model => model.Desc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Name)
                    </th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @if (Session["AddExam"] != null)
                                {
                                    if ((bool)Session["AddExam"] == true)
                                    {
                                        <div style="width:210px;">
                                            @Html.ActionLink("حذف", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })

                                            @Html.ActionLink("معلومات", "Details", new { id = item.id }, new { @class = "btn btn-info", @style = "margin:0 4px 0 4px " })
                                            @Html.ActionLink("تعديل", "Edit", new { id = item.id }, new { @class = "btn btn-success" })
                                        </div>
                                    }

                                }

                                else
                                {
                                    @Html.ActionLink("معلومات", "Details", new { id = item.id }, new { @class = "btn btn-info" })
                                }
                            </td>
                            <td>
                                @if (item.Proof != null)
                                {
                                    @Html.ActionLink("تحميل", "DownloadProof", "Json", new { ImageName = item.Proof }, new { @class = "btn btn-warning" })
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mark)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamType.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Study_subject.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Stage.StageName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Desc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Name)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <button id="btnExport" class="btn btn-warning" ng-hide="ExamRazorForm">Export to xls</button>
    <div id="table_wrapper2">
        <table class="table table-striped" ng-cloak ng-show="ExamAngularForm">
            <thead>
                <tr class="bg-primary">
                    <th></th>
                    <th>الاثبات</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamType.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Study_subject.Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Stage.StageName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>





                    <th>
                        @Html.DisplayNameFor(model => model.Desc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Name)
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="Exam in Exams">
                    <td>
                        @if (Session["AddExam"] != null)
                        {
                            if ((bool)Session["AddExam"] == true)
                            {
                                <a class="btn btn-info" href="/Examinations/Details/{{Exam.ID}}">معلومات</a>
                            }

                        }
                        else
                        {
                            <div style="width:210px;">

                                <a class="btn btn-danger" href="/Examinations/Delete/{{Exam.ID}}">حذف</a>
                                <a class="btn btn-info" href="/Examinations/Details/{{Exam.ID}}">معلومات</a>
                                <a class="btn btn-success" href="/Examinations/Edit/{{Exam.ID}}">تعديل</a>
                            </div>
                        }
                    </td>

                    <td>
                        <a class="btn btn-warning" href="/Json/DownloadProof/{{Exam.Proof}}">تحميل</a>
                    </td>

                    <td>{{Exam.Mark}}</td>
                    <td>{{Exam.ExamType}}</td>
                    <td>{{Exam.Subject}}</td>


                    <td>{{Exam.StageName}}</td>
                    <td>{{Exam.Date | date:'MM/dd/yyyy'}}</td>

                    <td>{{Exam.Desc}}</td>
                    <td>{{Exam.StudentSurname}}</td>
                    <td>{{Exam.StudentName}}</td>
                </tr>
            </tbody>
        </table>
    </div>





    <button id="btnExport2" class="btn btn-warning" ng-cloak ng-show="ExamAngularForm">Export to xls</button>
</div>
