@model IEnumerable<IntensiveLearning.Database.Regiment>

@{
    ViewBag.Title = "لائحة الشعب";
}
<div class="ThemeFirstBackground">
    <div style="display:inline-block;width:100%;">


        <h2 style="display:inline-block">لائحة الشعب</h2>
        <div style="display:inline-block;float:left;margin:20px 0;">

            @if (Session["SeeAccToCenter"] != null)
            {
                if ((bool)Session["SeeAccToCenter"] == true)
                {
                    using (Html.BeginForm("Create", "Regiments", FormMethod.Get))
                    {
                        <button type="submit" class="btn btn-success" title="انشاء جديد"><span class="glyphicon glyphicon-plus"></span></button>
                    }
                }
            }
            
        </div>
    </div>
</div>
<div class="ThemeSecondBackground">
    <div id="table_wrapper">
        <table class="table table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Period.Name)
                    </th>
                    <th></th>








                </tr>
            </thead>
            <tbody>
                @if (Model != null)
            {
                if (Model.Count() == 0)
                {
                        <tr>
                            <td colspan="25">
                                <div style="font-size:50px;line-height:300px;"><div class="col-xs-4"><i class="fa fa-exclamation" aria-hidden="true"></i></div><div class="col-xs-8" style="font-family:Cairo">لا يوجد أي مدخل</div></div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Period.Name)
                                </td>

                                <td>
                                    @if (Session["SeeAccToCenter"] != null)
                                    {
                                        if ((bool)Session["SeeAccToCenter"] == true)
                                        {
                                            <div style="width:130px;">
                                                <a href="/Regiments/Delete/@item.id" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                                <a href="/Regiments/Details/@item.id" class="btn btn-info"><span class="glyphicon glyphicon-folder-open"></span></a>
                                                <a href="/Regiments/Edit/@item.id" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span></a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <a href="/Regiments/Details/@item.id" class="btn btn-info"><span class="glyphicon glyphicon-folder-open"></span></a>
                                    }
                                </td>




                            </tr>
                        }
                    }
                }

                else
                {
                    <tr>
                        <td colspan="25">
                            <div style="font-size:50px;line-height:300px;"><div class="col-xs-4"><i class="fa fa-exclamation" aria-hidden="true"></i></div><div class="col-xs-8" style="font-family:Cairo">لا يوجد أي مدخل</div></div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <button id="btnExport" onclick="ToXlsXEmployees('table_wrapper','لائحة الشعب')" class="btn btn-success">xls تصدير ل</button>

    </div>
    @if (ViewBag.StateMessage != null)
            {
        <div class="alert alert-success alert-dismissible" role="alert" style="width:inherit;position:absolute;bottom:5%;" id="ToFadeMessage">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @ViewBag.StateMessage
        </div>
    }
