@model IEnumerable<IntensiveLearning.Database.ExamType>

@{
    ViewBag.Title = "لائحة انواع الامتحان";
}

<h2>لائحة انواع الامتحان</h2>
@if (Session["AddSchoolManagingTools"] != null)
{
    if ((bool)Session["AddSchoolManagingTools"] == true)
    {
        using (Html.BeginForm("Create", "ExamTypes", FormMethod.Get))
        {
            <button type="submit" class="btn btn-warning">انشاء جديد</button>
        }
    }
}
<table class="table table-striped">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>


        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @if (Session["AddSchoolManagingTools"] != null)
                        {
                            if ((bool)Session["AddSchoolManagingTools"] == true)
                            {
                                <div style="width:130px;">
                                    <a href="/ExamTypes/Delete/@item.id" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                    <a href="/ExamTypes/Details/@item.id" class="btn btn-info"><span class="glyphicon glyphicon-folder-open"></span></a>
                                    <a href="/ExamTypes/Edit/@item.id" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span></a>
                                </div>
                            }
                        }
                        else
                        {
                            <a href="/ExamTypes/Details/@item.id" class="btn btn-info"><span class="glyphicon glyphicon-folder-open"></span></a>
                        }


                    </td>


                </tr>
            }
        }
    </tbody>

</table>
@if (ViewBag.StateMessage != null)
{
        <div class="alert alert-success alert-dismissible" role="alert" style="width:inherit;position:absolute;bottom:5%;" id="ToFadeMessage">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewBag.StateMessage
    </div>
}